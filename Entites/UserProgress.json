{
  "name": "UserProgress",
  "type": "object",
  "properties": {
    "course_id": {
      "type": "string"
    },
    "course_title": {
      "type": "string"
    },
    "course_category": {
      "type": "string"
    },
    "course_image": {
      "type": "string"
    },
    "course_duration": {
      "type": "string"
    },
    "completed_lessons": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "total_lessons": {
      "type": "number"
    },
    "last_accessed": {
      "type": "string",
      "format": "date-time"
    },
    "is_saved": {
      "type": "boolean",
      "default": false
    },
    "time_spent_minutes": {
      "type": "number",
      "default": 0
    }
  },
  "required": ["course_id", "course_title"]
}
